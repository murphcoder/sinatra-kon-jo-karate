<% if @user.class == Parent %>
    <h2>Your Kids</h2>
<% elsif @user.class == Instructor %>
    <h2>Your Students</h2>
<% end %>
<ul>
<% @user.students.each do |student| %>
    <li><a href="/students/<%= student.id %>"><%= student.name %></a></li>
<% end %>
</ul>
<p><a href="/students/new">Add Student</a></p>