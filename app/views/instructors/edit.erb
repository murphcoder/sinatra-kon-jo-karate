<h2>Edit Instructor</h2>
<form action="/instructors/<%= @instructor.id %>" method="post">
<input id="hidden" type="hidden" name="_method" value="patch">
<table>
<tr>
<td><label for="name">Name</label></td>
<td><input type="text" name="instructor[name]" id="name" value="<%= @instructor.name %>"></td>
</tr>
<tr>
<td><label for="email">Email</label></td>
<td><input type="text" name="instructor[email]" id="email" value="<%= @instructor.email %>"></td>
</tr>
<tr>
<td><label for="password">New Password</label></td>
<td><input type="password" name="instructor[password]" id="password"></td>
</tr>
<tr>
<td><label for="cell_phone">Cell Phone</label></td>
<td><input type="text" name="instructor[cell_phone]" id="cell_phone" value="<%= @instructor.cell_phone %>"></td>
</tr>
<tr>
<td><label for="address">Description</label></td>
<td><textarea id="address" name="instructor[description]" rows="4" cols="50"><%= @instructor.description %>
</textarea></td>
</tr>
</table>
<input type="checkbox" id="admin" name="instructor[admin?]" value="true"
<% if @instructor.admin? == true %>
checked="checked"
<% end %>
>
<label for="admin">Admin?</label><br><br>
<input type="submit" name="edit" id="edit" value="Edit"><br>
</form>
<p>
    <form action="/instructors/<%= @instructor.id %>" method="post">
        <input id="hidden" type="hidden" name="_method" value="delete">
        <input type="submit" name="delete" value="Delete This Instructor">
    </form>
</p>